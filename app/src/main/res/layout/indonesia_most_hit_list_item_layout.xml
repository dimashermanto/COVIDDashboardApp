<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/backgroundImage"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:id="@+id/mostHitCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvJakartaInfectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mostHitCityName"
            android:layout_marginTop="8dp"
            android:text="Cases :" />

        <TextView
            android:id="@+id/tvIndonesiaMostHitCityInfection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mostHitCityName"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/tvJakartaInfectionTitle"
            android:text="3000"
            android:textStyle="bold" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
